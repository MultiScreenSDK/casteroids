<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/root_view"
    android:background="@drawable/bg_controller"
    tools:context=".PlayerInfoActivity">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/game_options_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_others"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/your_name"
        android:id="@+id/name_label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:ems="10"
        android:id="@+id/name_text"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:layout_below="@+id/name_label"
        android:layout_alignLeft="@+id/color_label"
        android:layout_alignStart="@+id/color_label"
        />

    <Button
        style="@style/AppButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:id="@+id/play_button"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/color1_button"
        android:layout_alignStart="@+id/color1_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_color"
        android:id="@+id/color_label"
        android:layout_below="@+id/name_text"
        android:layout_alignLeft="@+id/name_label"
        android:layout_alignStart="@+id/name_label"
        android:layout_marginTop="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:minWidth="80dp"
        android:id="@+id/color1_button"
        android:layout_below="@+id/color_label"
        android:layout_toRightOf="@+id/ship_view"
        android:layout_toEndOf="@+id/ship_view"
        android:background="@drawable/stroke"
        android:layout_marginRight="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:minWidth="80dp"
        android:id="@+id/color2_button"
        android:layout_alignBottom="@+id/color1_button"
        android:layout_toRightOf="@+id/color1_button"
        android:layout_toEndOf="@+id/color1_button"
        android:background="@drawable/stroke"
        android:layout_marginRight="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:minWidth="80dp"
        android:id="@+id/color3_button"
        android:layout_alignBottom="@+id/color2_button"
        android:layout_toRightOf="@+id/color2_button"
        android:layout_toEndOf="@+id/color2_button"
        android:background="@drawable/stroke"
        android:layout_marginRight="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:minWidth="80dp"
        android:id="@+id/color4_button"
        android:layout_alignBottom="@+id/color3_button"
        android:layout_toRightOf="@+id/color3_button"
        android:layout_toEndOf="@+id/color3_button"
        android:background="@drawable/stroke"
        android:layout_marginRight="16dp" />


    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/ship_view"
        android:src="@drawable/ship"
        android:scaleType="fitCenter"
        android:background="@drawable/stroke"
        android:layout_below="@+id/name_label"
        android:layout_toLeftOf="@+id/name_label"
        android:layout_toStartOf="@+id/name_label"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="30dp" />

</RelativeLayout>