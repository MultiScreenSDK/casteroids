<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@color/blue_grey_800"
	>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/how_to_play_button"
        android:text="@string/how_to_play"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical" android:layout_centerInParent="true">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/play_button"
            android:text="@string/play_spaceships"
            android:layout_centerInParent="true"
            android:drawableBottom="@drawable/ic_launcher"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/select_tv_button"
            android:text="@string/select_tv"
            android:layout_centerInParent="true"
            android:drawableBottom="@drawable/cast"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/no_tv_button"
            android:text="@string/no_tv_discovered"
            android:layout_centerInParent="true"
            />
        </LinearLayout>


</RelativeLayout>
