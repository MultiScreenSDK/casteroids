<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/casteroids"
    android:id="@+id/root_view">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/game_options_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_others"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_options_spinner"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/game_options_button"
        android:gravity="right"
        android:layout_marginTop="40dp"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/bg_rounded_corners"
        android:alpha="0.85"
        android:visibility="invisible"
        />


    <Button
        style="@style/AppButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:text="@string/connect"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <Button
        style="@style/AppButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/select_tv_button"
        android:text="@string/select_tv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:drawableBottom="@drawable/cast"
        android:visibility="gone" />

    <Button
        style="@style/AppButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/no_tv_button"
        android:text="@string/no_tv_discovered"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/img_casteroids"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
