<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            For v16 to v20 go with the Holo theme for backwards compatibility.

            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <!-- Pre-Lollipop devices will have Holo themed Dialogs -->
    <style name="AppDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Casteroids styled dialogs -->
    <style name="CustomAppDialog" parent="AppDialog">
        <item name="android:textColorPrimary">@color/dialogs_text_blue</item>
        <item name="android:textAppearanceMedium">@style/AppTextAppearance.Medium</item>
        <item name="android:windowBackground">@drawable/bg_rounded_corners</item>
        <item name="android:borderlessButtonStyle">@style/AppWidget.Button.Borderless</item>
        <item name="android:windowTitleSize">25dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/AppDialogWindowTitleBackground</item>
    </style>

    <style name="AppButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GameButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@drawable/gamebutton_text</item>
    </style>


    <!-- Dialogs Custom style -->


    <style name="AppDialogWindowTitleBackground" >
        <item name="android:background">@color/grey_black_1000</item>
    </style>

    <style name="AppTextAppearance.Medium" parent="@android:style/TextAppearance.Small">
        <!--<item name="android:textSize">48pt</item>-->
    </style>

    <style name="AppWidget.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/dialogs_text_blue</item>
        <item name="android:textAppearance">@style/AppTextAppearance.DialogButton</item>
        <item name="android:background">@color/grey_black_1000</item>
    </style>

    <style name="AppTextAppearance.DialogButton" parent="@android:style/TextAppearance.Medium"></style>
</resources>
