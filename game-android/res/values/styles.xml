<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            For v16 to v20 go with the Holo theme for backwards compatibility.

            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <!-- Pre-Lollipop devices will have Holo themed Dialogs -->
    <style name="AppDialog" parent="android:Theme.Holo.Dialog"/>

    <style name="AppButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="GameButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@drawable/gamebutton_text</item>
    </style>



</resources>
